{
  // Enable flat config support (for ESLint 9.x)
  "eslint.useFlatConfig": true,
  // Let ESLint handle all formatting (including Prettier)
  "eslint.format.enable": true,
  "prettier.enable": false, // Disable standalone Prettier
  "editor.formatOnSave": false, // Disable VSCode's default formatter
  // Instead, use ESLint's auto-fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Set ESLint as the default formatter for relevant files
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Files to validate with ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}