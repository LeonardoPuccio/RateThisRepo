{
  "manifest_version": 3,
  "name": "RateThisRepo",
  "version": "0.1.0",
  "description": "Repository analyzer: because in repositories, it's not just size that matters",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "*://github.com/*", 
    "*://api.github.com/*"
  ],
  "incognito": "split",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}